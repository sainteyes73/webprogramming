extends layout

block hero-unit
  #main_img.carousel.slide(data-ride="carousel", data-interval="3000")
    .carousel-inner
      .carousel-item.active
        img.d-block.w-100(src="images/1.jpg", alt="First slide")
      .carousel-item
        img.d-block.w-100(src="images/2.jpg", alt="Second slide")
      .carousel-item
        img.d-block.w-100(src="images/3.jpg", alt="Third slide")
  #top_jumbo.jumbotron.text-center
    .container
      h1.display-3 Find Event!
      #big_search.row
        .col-lg-12
          .input-group
            form.form-inline.search-input-group(action='/questions', method='GET')
              i.fa.fa-search
              input.form-control.mr-sm-2(type='text', name='term', placeholder='Search', aria-label='Search', value=term)
  #small_search.row
    .col-lg-6.center-block
      .input-group
        form.form-inline.search-input-group(action='/questions', method='GET')
          i.fa.fa-search
          input.form-control.mr-sm-2(type='text', name='term', placeholder='Search', aria-label='Search', value=term)
          #mid_term.container.text-center
      
block content
  .container
      //include ./questions/_question
      .card-box 
         if questions.total <= 0  
           .alert.alert-info No Event available yet 
         else
           .row.questions
             each question in questions.docs
               .col-md-4.col-sm-6
                 .question
                   .card
                     a(herf='/questions/${question.id}')
                       if question.img
                         img.img-fluid(src=question.img)
                       else
                         | no images
                       .card-body
                        .card-text
                          .title=question.title
                          .cardlocation
                            p place
                            .place=question.place
                            |&nbsp;
                            .content=question.content
  .browse_button
    a.btn.btn-primary(href="/questions", role="button") Browse More Events!
     
